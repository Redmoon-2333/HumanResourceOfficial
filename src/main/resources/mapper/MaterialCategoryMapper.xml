<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.redmoon2333.mapper.MaterialCategoryMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.redmoon2333.entity.MaterialCategory">
        <id column="category_id" property="categoryId" jdbcType="INTEGER"/>
        <result column="category_name" property="categoryName" jdbcType="VARCHAR"/>
        <result column="sort_order" property="sortOrder" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- SQL片段 -->
    <sql id="Base_Column_List">
        category_id, category_name, sort_order, create_time
    </sql>

    <!-- 根据ID查找分类 -->
    <select id="findById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM material_category
        WHERE category_id = #{categoryId}
    </select>

    <!-- 查找所有分类（按排序顺序） -->
    <select id="findAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM material_category
        ORDER BY sort_order ASC, create_time ASC
    </select>

    <!-- 根据分类名称查找 -->
    <select id="findByName" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM material_category
        WHERE category_name = #{categoryName}
    </select>

    <!-- 插入新分类 -->
    <insert id="insert" parameterType="com.redmoon2333.entity.MaterialCategory" useGeneratedKeys="true" keyProperty="categoryId">
        INSERT INTO material_category (
            category_name,
            sort_order,
            create_time
        ) VALUES (
            #{categoryName},
            #{sortOrder},
            #{createTime}
        )
    </insert>

    <!-- 更新分类信息 -->
    <update id="update" parameterType="com.redmoon2333.entity.MaterialCategory">
        UPDATE material_category
        <set>
            <if test="categoryName != null">
                category_name = #{categoryName},
            </if>
            <if test="sortOrder != null">
                sort_order = #{sortOrder},
            </if>
        </set>
        WHERE category_id = #{categoryId}
    </update>

    <!-- 根据ID删除分类 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM material_category
        WHERE category_id = #{categoryId}
    </delete>

</mapper>