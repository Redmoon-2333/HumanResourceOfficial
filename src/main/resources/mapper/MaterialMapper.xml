<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.redmoon2333.mapper.MaterialMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.redmoon2333.entity.Material">
        <id column="material_id" property="materialId" jdbcType="INTEGER"/>
        <result column="category_id" property="categoryId" jdbcType="INTEGER"/>
        <result column="subcategory_id" property="subcategoryId" jdbcType="INTEGER"/>
        <result column="material_name" property="materialName" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="LONGVARCHAR"/>
        <result column="file_url" property="fileUrl" jdbcType="VARCHAR"/>
        <result column="file_size" property="fileSize" jdbcType="INTEGER"/>
        <result column="file_type" property="fileType" jdbcType="VARCHAR"/>
        <result column="upload_time" property="uploadTime" jdbcType="TIMESTAMP"/>
        <result column="uploader_id" property="uploaderId" jdbcType="INTEGER"/>
        <result column="download_count" property="downloadCount" jdbcType="INTEGER"/>
    </resultMap>

    <!-- SQL片段 -->
    <sql id="Base_Column_List">
        material_id, category_id, subcategory_id, material_name, description, 
        file_url, file_size, file_type, upload_time, uploader_id, download_count
    </sql>

    <!-- 根据ID查找资料 -->
    <select id="findById" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM material
        WHERE material_id = #{materialId}
    </select>

    <!-- 根据分类ID查找资料列表 -->
    <select id="findByCategoryId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM material
        WHERE category_id = #{categoryId}
        ORDER BY upload_time DESC
    </select>

    <!-- 根据子分类ID查找资料列表 -->
    <select id="findBySubcategoryId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM material
        WHERE subcategory_id = #{subcategoryId}
        ORDER BY upload_time DESC
    </select>

    <!-- 根据上传者ID查找资料列表 -->
    <select id="findByUploaderId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM material
        WHERE uploader_id = #{uploaderId}
        ORDER BY upload_time DESC
    </select>

    <!-- 查找所有资料 -->
    <select id="findAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM material
        ORDER BY upload_time DESC
    </select>

    <!-- 根据资料名称模糊查询 -->
    <select id="findByNameLike" parameterType="java.lang.String" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM material
        WHERE material_name LIKE CONCAT('%', #{materialName}, '%')
        ORDER BY upload_time DESC
    </select>

    <!-- 插入新资料 -->
    <insert id="insert" parameterType="com.redmoon2333.entity.Material" useGeneratedKeys="true" keyProperty="materialId">
        INSERT INTO material (
            category_id,
            subcategory_id,
            material_name,
            description,
            file_url,
            file_size,
            file_type,
            upload_time,
            uploader_id,
            download_count
        ) VALUES (
            #{categoryId},
            #{subcategoryId},
            #{materialName},
            #{description},
            #{fileUrl},
            #{fileSize},
            #{fileType},
            #{uploadTime},
            #{uploaderId},
            #{downloadCount}
        )
    </insert>

    <!-- 更新资料信息 -->
    <update id="update" parameterType="com.redmoon2333.entity.Material">
        UPDATE material
        <set>
            <if test="categoryId != null">
                category_id = #{categoryId},
            </if>
            <if test="subcategoryId != null">
                subcategory_id = #{subcategoryId},
            </if>
            <if test="materialName != null">
                material_name = #{materialName},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="fileUrl != null">
                file_url = #{fileUrl},
            </if>
            <if test="fileSize != null">
                file_size = #{fileSize},
            </if>
            <if test="fileType != null">
                file_type = #{fileType},
            </if>
            <if test="downloadCount != null">
                download_count = #{downloadCount},
            </if>
        </set>
        WHERE material_id = #{materialId}
    </update>

    <!-- 更新下载次数 -->
    <update id="updateDownloadCount" parameterType="java.lang.Integer">
        UPDATE material
        SET download_count = download_count + 1
        WHERE material_id = #{materialId}
    </update>

    <!-- 根据ID删除资料 -->
    <delete id="deleteById" parameterType="java.lang.Integer">
        DELETE FROM material
        WHERE material_id = #{materialId}
    </delete>

    <!-- 根据分类ID删除所有资料 -->
    <delete id="deleteByCategoryId" parameterType="java.lang.Integer">
        DELETE FROM material
        WHERE category_id = #{categoryId}
    </delete>

    <!-- 根据子分类ID删除所有资料 -->
    <delete id="deleteBySubcategoryId" parameterType="java.lang.Integer">
        DELETE FROM material
        WHERE subcategory_id = #{subcategoryId}
    </delete>

</mapper>